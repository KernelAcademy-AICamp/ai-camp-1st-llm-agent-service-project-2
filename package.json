{
  "name": "lawlaw-desktop",
  "version": "0.1.0",
  "description": "LawLaw Desktop - 완전 로컬 형사법 AI 어시스턴트",
  "main": "app/frontend/electron/main.js",
  "private": true,
  "scripts": {
    "start": "concurrently \"npm run electron\" \"npm run react\"",
    "react": "cd app/frontend && react-scripts start",
    "electron": "electron .",
    "build-react": "cd app/frontend && react-scripts build",
    "build-electron": "electron-builder",
    "build": "npm run build-react && npm run build-electron",
    "dev": "concurrently \"npm run dev:react\" \"npm run dev:electron\"",
    "dev:react": "cd app/frontend && BROWSER=none react-scripts start",
    "dev:electron": "wait-on http://localhost:3000 && electron .",
    "backend": "cd app/backend && uvicorn main:app --reload --port 8000",
    "dev:full": "concurrently \"npm run backend\" \"npm run dev:react\" \"npm run dev:electron\""
  },
  "keywords": [
    "legal",
    "ai",
    "assistant",
    "korean",
    "law"
  ],
  "author": "LawLaw Team",
  "license": "MIT",
  "dependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "axios": "^1.6.0",
    "electron": "^27.0.0",
    "node-fetch": "^3.3.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.12.0",
    "react-router-dom": "^6.20.0",
    "react-scripts": "^5.0.1",
    "typescript": "^4.9.5"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "concurrently": "^8.2.0",
    "electron-builder": "^24.6.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.lawlaw.desktop",
    "productName": "LawLaw",
    "directories": {
      "output": "dist"
    },
    "files": [
      "app/frontend/build/**/*",
      "app/frontend/electron/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "app/frontend/public/icon.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "app/frontend/public/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "category": "Office",
      "icon": "app/frontend/public/icon.png"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
