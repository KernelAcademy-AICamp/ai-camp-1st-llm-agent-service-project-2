# ============================================================================
# PDF OCR System - Environment Variables
# ============================================================================
# Copy this file to .env and fill in your values

# ============================================================================
# Application Settings
# ============================================================================
APP_NAME="PDF OCR System"
APP_VERSION="1.0.0"
DEBUG=True
SECRET_KEY=your-secret-key-change-this-in-production
LOG_LEVEL=INFO

# ============================================================================
# Database (PostgreSQL)
# ============================================================================
# For local development with Docker Compose
DATABASE_URL=postgresql+asyncpg://ocruser:ocrpassword@localhost:5432/ocrdb

# For production, use connection pooling
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10

# ============================================================================
# Redis (Cache & Message Broker)
# ============================================================================
REDIS_URL=redis://:redispassword@localhost:6379/0

# ============================================================================
# Celery (Task Queue)
# ============================================================================
CELERY_BROKER_URL=redis://:redispassword@localhost:6379/0
CELERY_RESULT_BACKEND=redis://:redispassword@localhost:6379/0

# ============================================================================
# MinIO / S3 Storage
# ============================================================================
STORAGE_ENDPOINT=localhost:9000
STORAGE_ACCESS_KEY=minioadmin
STORAGE_SECRET_KEY=minioadmin123
STORAGE_BUCKET_PUBLIC=public-docs
STORAGE_BUCKET_PRIVATE=private-docs
STORAGE_USE_SSL=False

# ============================================================================
# Security & Encryption
# ============================================================================
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=your-fernet-encryption-key-here

# JWT Settings
JWT_SECRET=your-jwt-secret-key-change-this
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# ============================================================================
# OCR Settings
# ============================================================================
OCR_ENGINE=auto
TESSERACT_LANG=kor+eng
TESSERACT_DPI=300
OCR_MAX_WORKERS=4
OCR_CONFIDENCE_THRESHOLD=60.0

# ============================================================================
# File Upload Settings
# ============================================================================
MAX_UPLOAD_SIZE=52428800
ALLOWED_EXTENSIONS=.pdf
ALLOWED_MIME_TYPES=application/pdf

# ============================================================================
# Rate Limiting
# ============================================================================
RATE_LIMIT_UPLOADS=10/hour
RATE_LIMIT_API=100/minute

# ============================================================================
# CORS Settings
# ============================================================================
# Comma-separated list of allowed origins
CORS_ORIGINS="http://localhost:3000,http://localhost:5173,http://localhost:8000"

# ============================================================================
# Monitoring (Optional)
# ============================================================================
# SENTRY_DSN=https://your-sentry-dsn-here
